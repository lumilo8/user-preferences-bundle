<div class="control-group">
    <div class="controls row">
        {% for value in setting.optionsarr %}
            <div class="col-md-4">
                <label>
                    <input
                            {% for user_value in (app.user|getUserValue(setting)) %}
                                {% if user_value == value %}checked="checked" {% endif %}
                            {% endfor %}
                            name="multisetting_{{ setting.id }}_{{value}}" type="checkbox" class="ace" value="{{value}}"
                            />
                    <span class="lbl">{{ ("preference."~setting.name~".value."~value)|trans }}</span>
                </label>
            </div>
        {% endfor %}
    </div>
</div>
